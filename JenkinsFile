pipeline {
    agent any

    stages {
        stage('Verificar archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Verifica si el archivo docker-compose.yml existe en la carpeta inventario_api
                                if (!fileExists('docker-compose.yml')) {
                                    error "El archivo docker-compose.yml no se encuentra en inventario_api"
                                }
                            }
                        }
                    }
                }
                stage('Verificar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Verifica si el archivo docker-compose.yml existe en la carpeta pedidos_api
                                if (!fileExists('docker-compose.yml')) {
                                    error "El archivo docker-compose.yml no se encuentra en pedidos_api"
                                }
                            }
                        }
                    }
                }
            }
        }

        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Construye el servicio de Inventario API usando docker-compose
                                sh 'docker-compose -f docker-compose.yml build'
                            }
                        }
                    }
                }
                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Construye el servicio de Pedidos API usando docker-compose
                                sh 'docker-compose -f docker-compose.yml build'
                            }
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí puedes agregar comandos para correr pruebas en Inventario API
                                echo 'Ejecutando pruebas para Inventario API...'
                            }
                        }
                    }
                }
                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí puedes agregar comandos para correr pruebas en Pedidos API
                                echo 'Ejecutando pruebas para Pedidos API...'
                            }
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí puedes agregar comandos para desplegar Inventario API
                                echo 'Desplegando Inventario API...'
                            }
                        }
                    }
                }
                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí puedes agregar comandos para desplegar Pedidos API
                                echo 'Desplegando Pedidos API...'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            // Aquí puedes agregar acciones que siempre deben ejecutarse al final del pipeline
            echo 'Pipeline finalizado.'
        }

        success {
            // Acciones a ejecutar en caso de éxito
            echo 'Pipeline ejecutado correctamente.'
        }

        failure {
            // Acciones a ejecutar en caso de falla
            echo 'El pipeline falló.'
        }
    }
}

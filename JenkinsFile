pipeline {
    agent any

    environment {
        // Definir variables de entorno
        DOCKER_COMPOSE = '/usr/local/bin/docker-compose' // Ruta al binario de Docker Compose, ajusta según sea necesario
        REPO_URL = 'https://github.com/Luisop05/Microservices1.git' // URL del repositorio Git
    }

    stages {
        stage('Checkout SCM') {
            steps {
                // Clonar el código desde el repositorio
                checkout scm
            }
        }

        stage('Verificar Archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        script {
                            // Verificar si los archivos necesarios están presentes
                            if (!fileExists('inventario_api/Dockerfile')) {
                                error 'Dockerfile for inventario_api does not exist'
                            }
                        }
                    }
                }

                stage('Verificar Pedidos API') {
                    steps {
                        script {
                            // Verificar si los archivos necesarios están presentes
                            if (!fileExists('pedidos_api/Dockerfile')) {
                                error 'Dockerfile for pedidos_api does not exist'
                            }
                        }
                    }
                }
            }
        }

        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Construir la imagen para el servicio 'inventario_api'
                                sh "docker-compose -f ../docker-compose.yml build inventario_api"
                            }
                        }
                    }
                }

                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Construir la imagen para el servicio 'pedidos_api'
                                sh "docker-compose -f ../docker-compose.yml build pedidos_api"
                            }
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí puedes agregar los comandos para correr las pruebas de 'inventario_api'
                                echo 'Ejecutando pruebas para Inventario API'
                            }
                        }
                    }
                }

                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí puedes agregar los comandos para correr las pruebas de 'pedidos_api'
                                echo 'Ejecutando pruebas para Pedidos API'
                            }
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Desplegar 'inventario_api' (ajusta según tu entorno de despliegue)
                                echo 'Desplegando Inventario API'
                            }
                        }
                    }
                }

                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Desplegar 'pedidos_api' (ajusta según tu entorno de despliegue)
                                echo 'Desplegando Pedidos API'
                            }
                        }
                    }
                }
            }
        }

    }

    post {
        always {
            // Limpiar recursos, detener contenedores, etc.
            echo 'Pipeline completado'
        }

        success {
            // Acciones en caso de éxito
            echo 'Pipeline ejecutado con éxito'
        }

        failure {
            // Acciones en caso de fallo
            echo 'Pipeline fallido'
        }
    }
}

pipeline {
    agent any

    stages {
        stage('Verificar archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            // Comando para listar archivos en la carpeta 'inventario_api'
                            sh 'ls -la'
                        }
                    }
                }
                stage('Verificar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            // Comando para listar archivos en la carpeta 'pedidos_api'
                            sh 'ls -la'
                        }
                    }
                }
            }
        }

        stage('Construcci√≥n') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            // Construye la imagen Docker
                            sh 'docker-compose -f docker-compose.yml build'
                        }
                    }
                }
                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            // Construye la imagen Docker
                            sh 'docker-compose -f docker-compose.yml build'
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            // Ejecuta pruebas con pytest
                            sh 'pytest test_app.py'
                        }
                    }
                }
                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            // Ejecuta pruebas con pytest
                            sh 'pytest test_app.py'
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            // Levanta los servicios en modo detached
                            sh 'docker-compose -f docker-compose.yml up -d'
                        }
                    }
                }
                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            // Levanta los servicios en modo detached
                            sh 'docker-compose -f docker-compose.yml up -d'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                // Publica los resultados de las pruebas, ajusta la ruta si es necesario
                junit '**/results/*.xml'
            }
        }
    }
}

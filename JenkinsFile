pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = '/usr/local/bin/docker-compose'  // Ruta al binario de Docker Compose
        REPO_URL = 'https://github.com/Luisop05/Microservices1.git'  // URL del repositorio Git
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Verificar Archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        script {
                            if (!fileExists('inventario_api/Dockerfile')) {
                                error 'Dockerfile for inventario_api does not exist'
                            }
                        }
                    }
                }

                stage('Verificar Pedidos API') {
                    steps {
                        script {
                            if (!fileExists('pedidos_api/Dockerfile')) {
                                error 'Dockerfile for pedidos_api does not exist'
                            }
                        }
                    }
                }
            }
        }

        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                sh "docker-compose -f ../docker-compose.yml build inventario_api"
                            }
                        }
                    }
                }

                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                sh "docker-compose -f ../docker-compose.yml build pedidos_api"
                            }
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                echo 'Ejecutando pruebas para Inventario API'
                            }
                        }
                    }
                }

                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                echo 'Ejecutando pruebas para Pedidos API'
                            }
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                echo 'Desplegando Inventario API'
                            }
                        }
                    }
                }

                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                echo 'Desplegando Pedidos API'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completado'
        }

        success {
            echo 'Pipeline ejecutado con éxito'
        }

        failure {
            echo 'Pipeline fallido'
        }
    }
}

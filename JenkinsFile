pipeline {
    agent any

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Verificar archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Verificar si el archivo docker-compose.yml está en la raíz
                                if (!fileExists('../docker-compose.yml')) {
                                    error "docker-compose.yml no se encuentra en la raíz del repositorio."
                                }
                            }
                        }
                    }
                }
                stage('Verificar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Verificar si el archivo docker-compose.yml está en la raíz
                                if (!fileExists('../docker-compose.yml')) {
                                    error "docker-compose.yml no se encuentra en la raíz del repositorio."
                                }
                            }
                        }
                    }
                }
            }
        }

        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Ejecutar docker-compose build para la API de inventario
                                sh 'docker-compose -f ../docker-compose.yml build inventario_api'
                            }
                        }
                    }
                }
                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Ejecutar docker-compose build para la API de pedidos
                                sh 'docker-compose -f ../docker-compose.yml build pedidos_api'
                            }
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Ejecutar las pruebas para la API de inventario
                                sh 'pytest test_app.py'
                            }
                        }
                    }
                }
                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Ejecutar las pruebas para la API de pedidos
                                sh 'pytest test_app.py'
                            }
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Desplegar la API de inventario con docker-compose
                                sh 'docker-compose -f ../docker-compose.yml up -d inventario_api'
                            }
                        }
                    }
                }
                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Desplegar la API de pedidos con docker-compose
                                sh 'docker-compose -f ../docker-compose.yml up -d pedidos_api'
                            }
                        }
                    }
                }
            }
        }

        stage('Declarative: Post Actions') {
            steps {
                echo 'Pipeline finalizado.'
                script {
                    // Acción post-pipeline (si se requiere alguna adicional)
                }
            }
        }
    }

    post {
        always {
            echo 'El pipeline ha terminado.'
        }
        success {
            echo 'El pipeline ha sido exitoso.'
        }
        failure {
            echo 'El pipeline ha fallado.'
        }
    }
}


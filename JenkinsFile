pipeline {
    agent any
    
    environment {
        // Si tienes alguna variable de entorno global, la puedes definir aquí.
    }

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Verificar archivos') {
            parallel {
                stage('Verificar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                if (!fileExists('../docker-compose.yml')) {
                                    error "docker-compose.yml no se encuentra en la raíz del repositorio."
                                }
                            }
                        }
                    }
                }
                stage('Verificar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                if (!fileExists('../docker-compose.yml')) {
                                    error "docker-compose.yml no se encuentra en la raíz del repositorio."
                                }
                            }
                        }
                    }
                }
            }
        }

        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí se ejecuta docker-compose desde la raíz, no dentro de 'inventario_api'
                                sh 'docker-compose -f ../docker-compose.yml build inventario_api'
                            }
                        }
                    }
                }
                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí se ejecuta docker-compose desde la raíz, no dentro de 'pedidos_api'
                                sh 'docker-compose -f ../docker-compose.yml build pedidos_api'
                            }
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí puedes agregar las pruebas para inventario_api si es necesario
                                sh 'pytest test_app.py'
                            }
                        }
                    }
                }
                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí puedes agregar las pruebas para pedidos_api si es necesario
                                sh 'pytest test_app.py'
                            }
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            script {
                                // Aquí puedes agregar el comando de despliegue para inventario_api
                                sh 'docker-compose -f ../docker-compose.yml up -d inventario_api'
                            }
                        }
                    }
                }
                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            script {
                                // Aquí puedes agregar el comando de despliegue para pedidos_api
                                sh 'docker-compose -f ../docker-compose.yml up -d pedidos_api'
                            }
                        }
                    }
                }
            }
        }

        stage('Declarative: Post Actions') {
            steps {
                echo 'Pipeline finalizado.'
                script {
                    // Aquí puedes agregar las acciones post-pipeline si las necesitas.
                }
            }
        }
    }

    post {
        always {
            echo 'El pipeline ha terminado.'
        }
        success {
            echo 'El pipeline ha sido exitoso.'
        }
        failure {
            echo 'El pipeline ha fallado.'
        }
    }
}


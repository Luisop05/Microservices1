pipeline {
    agent any

    stages {
        stage('Construcción') {
            parallel {
                stage('Construir Inventario API') {
                    steps {
                        dir('inventario_api') {
                            bat 'docker-compose -f docker-compose.yml build'
                        }
                    }
                }
                stage('Construir Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            bat 'docker-compose -f docker-compose.yml build'
                        }
                    }
                }
            }
        }

        stage('Pruebas') {
            parallel {
                stage('Pruebas Inventario API') {
                    steps {
                        dir('inventario_api') {
                            bat 'pytest test_app.py'
                        }
                    }
                }
                stage('Pruebas Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            bat 'pytest test_app.py'
                        }
                    }
                }
            }
        }

        stage('Despliegue') {
            parallel {
                stage('Desplegar Inventario API') {
                    steps {
                        dir('inventario_api') {
                            bat 'docker-compose -f docker-compose.yml up -d'
                        }
                    }
                }
                stage('Desplegar Pedidos API') {
                    steps {
                        dir('pedidos_api') {
                            bat 'docker-compose -f docker-compose.yml up -d'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                junit '**/results/*.xml' // Asegúrate de que esta ruta es correcta.
            }
        }
    }
}
